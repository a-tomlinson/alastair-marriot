  // padding 120px 20px 80px 20px

  &__container
    width 100%
    height 100%
    overflow-y scroll

  &__content
    width 70%
    float left
    padding-right 20px

    &--full-width
      width 100%
      padding 0

      p
        padding 0 20px 0 40px

    img
      width 100%

    &--statement
      text-align center
      border-top 2px solid $c-text-color
      border-bottom 2px solid $c-text-color
      padding 20px 0
      margin 20px 0

  &__menu
    width 29%
    float left

    li
      border-top 2px solid $c-text-color
      padding ($baseline) 0
      margin-bottom $baseline
      width 100%

  &__copyright
    position absolute
    bottom 20px
    left 20px
